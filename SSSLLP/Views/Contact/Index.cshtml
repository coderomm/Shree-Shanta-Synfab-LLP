@model SSSLLP.Models.Contact_Enqtbl

@{
    ViewBag.Title = "SSS LLP - Contact Us";
}

<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap">
                        <nav aria-label="breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="~/"><i class="fa fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a class="@((ViewBag.ActivePage == "Contact") ? "active" : "")" href="~/Contact">Contact</a></li>

                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- google map start -->
    <div class="map-area section-padding">
        <div class="container rounded-3">
            <div id="google-map">
                <iframe class=" rounded-3" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3606.456055600385!2d74.58329547497179!3d25.322473226615905!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3968e9714e2aa41d%3A0x52dae6f23ca49e10!2sShree%20Shanta%20Synfab%20LLP!5e0!3m2!1sen!2sin!4v1692351323162!5m2!1sen!2sin" style="border:0;width:100%;height:100%;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
    <!-- google map end -->
    <!-- contact area start -->
    <div class="contact-area section-padding pt-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="contact-message">
                        <h3 class="contact-title">Book Enquiry Now !</h3>
                        @using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "contact-form", id = "contact-form" }))
                        {
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <input name="uname" placeholder="Name *" type="text" required="">
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <input name="umob" placeholder="Phone *" type="text" required="">
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <input name="uemail" placeholder="Email *" type="text" required="">
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <input name="usub" placeholder="Subject *" type="text">
                                </div>
                                <div class="col-12">
                                    <div class="contact2-textarea text-center">
                                        <textarea placeholder="Message *" name="umsg" class="form-control2" required=""></textarea>
                                    </div>
                                    <div class="contact-btn">
                                        <button class="btn btn-sqr" type="submit">Send Message</button>
                                    </div>
                                </div>

                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="contact-info">
                        <h3 class="contact-title">Contact Us</h3>
                        <p>"Have a question or need assistance? We're here to help! Feel free to reach out to our friendly team and we'll get back to you promptly. Let's start weaving together!"</p>
                        <ul>
                            @foreach (var item in @ViewBag.CompanyDetails)
                            {
                                <li><i class="fa fa-fax" style="color: #e99c2e;"></i> Address : @item.cAddress</li>
                                <li><i class="fa fa-envelope-o" style="color: #e99c2e;"></i> E-mail: @item.cEmail</li>
                                <li><i class="fa fa-phone" style="color: #e99c2e;"></i> @item.cMobile1</li>
                                <li><i class="fa fa-phone" style="color: #e99c2e;"></i> @item.cMobile2</li>
                            }
                        </ul>
                        <div class="working-time">
                            <h6>Working Hours</h6>
                            <p><span>Monday – Saturday:</span>10AM – 07PM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- contact area end -->
</main>

