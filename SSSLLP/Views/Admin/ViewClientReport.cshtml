
@{
    ViewBag.Title = "View Client Report";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<SSSLLP.Models.ClientReportingTbl>

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="~/Admin"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->


        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Click Here To Upload Latest Client Reports</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <br />
                <div class="col-lg-12">
                    @using (Html.BeginForm("UploadClientReport", "Admin", FormMethod.Post))
                    {
                        @Html.Hidden("filePath", @"D:\a\b\c")
                        <input class="btn btn-primary px-5" type="submit" value="Upload" />
                    }
                </div>
                <div class="col-lg-12">
                    <a href="~/Admin/Export" class="btn btn-outline-success px-5">Export</a>
                </div>
            </div>
        </div>
        <h6 class="mb-0 text-uppercase">Client Report DataTable</h6>
        <hr>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>LoomNo</th>
                                <th>OwnParty</th>
                                <th>QualityNo</th>
                                <th>ReedxPickxRs</th>
                                <th>BeamNo</th>
                                <th>BeamPipeNo</th>
                                <th>DateOfGaitingKnotting</th>
                                <th>Nos</th>
                                <th>AvgOfRollingMtr</th>
                                <th>AvgOfPick</th>
                                <th>TotalFabricReced</th>
                                <th>BeamBalanceMtr</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.LoomNo</td>
                                    <td>@item.OwnParty</td>
                                    <td>@item.QualityNo</td>
                                    <td>@item.ReedxPickxRs</td>
                                    <td>@item.BeamNo</td>
                                    <td>@item.BeamPipeNo</td>
                                    <td>@item.DateOfGaitingKnotting</td>
                                    <td>@item.BillFallDate</td>
                                    <td>@item.Nos</td>
                                    <td>@item.AvgOfRollingMtr</td>
                                    <td>@item.AvgOfPick</td>
                                    <td>@item.TotalFabricReced</td>
                                    <td>@item.BeamBalanceMtr</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <br />
                <div class="col-lg-12">
                    <a href="~/Admin/Index" class="btn btn-success px-5">Back To Home</a>
                </div>
            </div>
        </div>
    </div>
</div>


