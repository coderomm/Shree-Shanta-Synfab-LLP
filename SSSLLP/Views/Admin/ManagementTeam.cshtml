@model IEnumerable<SSSLLP.Models.Team>

@{
    ViewBag.Title = "ManagementTeam";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="~/Admin"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-lg-12">
                <h6 class="mb-0 text-uppercase">Add Management Team</h6>
                <hr>
                <div class="card border-top border-0 border-4 border-danger">
                    <div class="card-body p-5">
                        <div class="card-title d-flex align-items-center">
                            <h5 class="mb-0 text-danger">Add Management Team</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("ManagementTeam", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-lg-6 col-sm-6 col-12">
                                <label for="name" class="form-label">Member Name With Designation</label>
                                <div class="input-group">
                                    <input name="name" type="text" class="form-control" id="name" placeholder="Ex: Om Sharma ( Developer )">
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-6 col-12">
                                <label for="image" class="form-label">Member Image</label>
                                <div class="input-group">
                                    <input name="image" class="form-control" type="file" id="image">
                                </div>
                            </div>

                            <div class="col-lg-12 col-sm-12 col-12">
                                <label for="about" class="form-label">About Member</label>
                                <textarea name="about" class="form-control" id="about" placeholder="Enter About Member" rows="5"></textarea>
                            </div>

                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-primary radius-10 px-4"><i class="bx bxs-plus-square"></i> Add New Member</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <h6 class="mb-0 text-uppercase">Team DataTable</h6>
        <hr>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th width="20%">Id</th>
                                <th width="20%">Name</th>
                                <th width="20%">Image</th>
                                <th width="20%">Edit</th>
                                <th width="20%">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.name</td>
                                <td><img src="@Url.Content("~/Content/assets/Images/Team/" + @item.image)" class="img-fluid" height="100" width="100" /></td>

                                <td><a href="@Url.RouteUrl("TeamMember", new { id = item.Id })" class="btn btn-primary"><i class="bx bxs-edit"></i> Edit</a></td>
                                <td><a href="@Url.Action("DeleteManagementTeam", "Admin",new {id=item.Id})" class="btn btn-danger"><i class="bx bxs-trash"></i> Delete</a></td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
