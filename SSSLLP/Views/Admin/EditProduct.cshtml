@model SSSLLP.Models.ProductColorlist

@{
    ViewBag.Title = "EditProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-lg-12">
                <h6 class="mb-0 text-uppercase">Update Product & Details</h6>
                <hr>
                <div class="card border-top border-0 border-4 border-danger">
                    <div class="card-body p-5">
                        <div class="card-title d-flex align-items-center">

                            <h5 class="mb-0 text-danger">Update Product & Details</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()

                            <input name="rts" value="@Model.Product_Tbl.rts" hidden />
                            <input name="status" value="true" hidden />

                            <div class="col-md-6">
                                <label for="pname" class="form-label">Product Name</label>
                                <div class="input-group">
                                    <input value="@Model.Product_Tbl.pname" name="pname" type="text" class="form-control" id="pname" placeholder="Product Name">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label for="pweight" class="form-label">Product Weight Per Unit</label>
                                <div class="input-group">
                                    <input value="@Model.Product_Tbl.pweight" name="pweight" type="text" class="form-control" id="pweight" placeholder="Product Weight">
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="pdetails" class="form-label">Product About Section</label>
                                <textarea name="pdetails" class="form-control" id="pdetails" placeholder="Enter About Product" rows="3">@Model.Product_Tbl.pdetails</textarea>
                            </div>

                            <div class="col-12">
                                <label for="pcolor" class="form-label">Select Color </label>
                                <div class="row">
                                    @foreach (var item in Model.Color_Tbl)
                                    {
                                        <div class="col-lg-4 col-sm-4 col-6">
                                            <div class="selectColor d-flex justify-content-start align-items-center m-1">
                                                <h6 class="ColorName">@item.ColorName</h6>
                                                <div class="mx-2" style="height:25px;width:25px;background-color:@item.ColorName;border-radius:10px;"></div>
                                                <input type="checkbox" name="SelectedColorId" value="@item.Id" @(Model.SelectedColorId.Contains(item.Id) ? "checked" : "") />
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label for="pimg1" class="form-label">Product Image 1</label>
                                <div class="input-group">
                                    <input name="pimg1" class="form-control" type="file">
                                    <input value="@Model.Product_Tbl.pimg1" name="pimg1" type="text" hidden>
                                    <img src="@Url.Content("~/Content/assets/Images/Products/" + Model.Product_Tbl.pimg1)" class="img-fluid" height="50" width="50" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label for="pimg2" class="form-label">Product Image 2</label>
                                <div class="input-group">
                                    <input name="pimg2" class="form-control" type="file">
                                    <input value="@Model.Product_Tbl.pimg2" name="pimg2" type="text" hidden>
                                    <img src="@Url.Content("~/Content/assets/Images/Products/" + Model.Product_Tbl.pimg2)" class="img-fluid" height="50" width="50" />
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label for="pimg3" class="form-label">Product Image 3</label>
                                <div class="input-group">
                                    <input name="pimg3" class="form-control" type="file">
                                    <input value="@Model.Product_Tbl.pimg3" name="pimg3" type="text" hidden>
                                    <img src="@Url.Content("~/Content/assets/Images/Products/" + Model.Product_Tbl.pimg3)" class="img-fluid" height="50" width="50" />
                                </div>
                            </div>


                            <div class="col-12">
                                <button type="submit" class="btn btn-danger px-5">Update</button>
                            </div>
                            <div class="col-12">
                                <a href="~/Admin/AddProduct" class="btn btn-success px-5">Cancle</a>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>