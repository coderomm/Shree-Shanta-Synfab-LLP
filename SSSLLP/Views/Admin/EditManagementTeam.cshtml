@model SSSLLP.Models.Team

@{
    ViewBag.Title = "EditManagementTeam";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="~/Admin"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-lg-12">
                <h6 class="mb-0 text-uppercase">Add Management Team</h6>
                <hr>
                <div class="card border-top border-0 border-4 border-danger">
                    <div class="card-body p-5">
                        <div class="card-title d-flex align-items-center">
                            <h5 class="mb-0 text-danger">Add Management Team</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("EditManagementTeam", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()
                            <input value="@Model.image" name="image" class="form-control" hidden>

                            <div class="col-lg-6 col-sm-6 col-12">
                                <label for="name" class="form-label">Member Name With Designation</label>
                                <div class="input-group">
                                    <input value="@Model.name" name="name" type="text" class="form-control" id="name" placeholder="Ex: Om Sharma ( Developer )">
                                </div>
                            </div>

                            <div class="col-lg-6 col-sm-6 col-12">
                                <label for="image" class="form-label">Member Image</label>
                                <div class="input-group">
                                    <input value="@Model.image" name="image" class="form-control" type="file" id="image">
                                    <img src="~/Content/assets/Images/Team/@Model.image" class="img-fluid" style="height:60px;width:60px;" />
                                </div>
                            </div>

                            <div class="col-lg-12 col-sm-12 col-12">
                                <label for="about" class="form-label">About Member</label>
                                <textarea name="about" class="form-control" id="about" placeholder="Enter About Member" rows="5">@Model.about</textarea>
                            </div>

                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-danger px-5">Update</button>
                                <a href="~/Admin/ManagementTeam" class="btn btn-success px-5">Cancle</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>