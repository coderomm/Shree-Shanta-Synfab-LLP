@model IEnumerable<SSSLLP.Models.Order_Tbl>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->

        <h6 class="mb-0 text-uppercase">Product Sample Order Enquires</h6>
        <hr>
        <div class="card">
            <div class="card-body">
                <div class="card-title d-flex align-items-center">
                    <h5 class="mb-0 text-danger">Product Sample Order Enquires</h5>
                </div>
                <hr>
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th width="5%">Id</th>
                                <th width="15%">CustomerID</th>
                                <th width="10%">ProductID</th>
                                <th width="20%">Quantity<br />Enquired</th>
                                <th width="20%">Color<br />Enquired</th>
                                <th width="20%">DateTime</th>
                                <th width="10%">Shipping<br />
                                Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CustomerID</td>
                                <td>@item.ProductID</td>
                                <td>@item.Quantity</td>
                                <td>@item.OrderColorName (@item.ColorOrder)</td>
                                <td>@item.OrderDate</td>
                                <td><a href="@Url.Action("ShippingDetails", "Admin",new {id=item.Id})" class="btn btn-primary">View</a></td>
                            </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>