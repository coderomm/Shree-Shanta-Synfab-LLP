@model SSSLLP.Models.Review_Tbl

@{
    ViewBag.Title = "Add Review";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>

        </div>
        <!--end breadcrumb-->


        <div class="row">
            <div class="col-lg-12">
                <h6 class="mb-0 text-uppercase">Add Review or Testimonials</h6>
                <hr>
                <div class="card border-top border-0 border-4 border-danger">
                    <div class="card-body p-5">
                        <div class="card-title d-flex align-items-center">
                            <div>
                                <i class="bx bxs-user me-1 font-22 text-danger"></i>
                            </div>
                            <h5 class="mb-0 text-danger">Add Review or Testimonials</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("AddReview", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="col-md-6">
                                <label for="uname" class="form-label">User Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-transparent"><i class='bx bxs-user'></i></span>
                                    <input name="uname" type="text" class="form-control border-start-0" id="uname" placeholder="User Name">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label for="uimg" class="form-label">User Image </label>
                                <input name="uimg" class="form-control" type="file" id="uimg">
                            </div>

                            <div class="col-12">
                                <label for="ureview" class="form-label">User Review</label>
                                <textarea name="ureview" class="form-control" id="ureview" placeholder="Enter User Review" rows="3"></textarea>
                            </div>

                            <div class="col-12">
                                <label for="ureviewdate" class="form-label">User Review Date</label>
                                <input name="ureviewdate" class="form-control" id="ureviewdate" placeholder="Enter User Review Date" />
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-danger px-5">Add Review</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>


        <h6 class="mb-0 text-uppercase">Review Table</h6>
        <hr>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @ViewBag.AllReview)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.uname</td>
                                    <td><img src="@Url.Content("~/Content/assets/Images/Review/" + @item.uimg)" class="img-fluid" height="50" width="50" /></td>
                                   
                                    <td><a href="@Url.Action("EditReview", "Admin",new {id=item.Id})" class="btn btn-primary">Edit</a></td>
                                    <td><a href="@Url.Action("DeleteReview", "Admin",new {id=item.Id})" class="btn btn-danger">Delete</a></td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
