    <section class="about-first-sec-div my-2 py-4">
        <div class="container">
            <div class="row mt-4">
                <div class="col-md-5">
                    <div class="p-4 about-right-div border-remove wow zoomIn animated animated" data-wow-delay=".6s" data-wow-duration="2s" style="visibility: visible; animation-duration: 2s; animation-delay: 0.6s; animation-name: zoomIn;">
