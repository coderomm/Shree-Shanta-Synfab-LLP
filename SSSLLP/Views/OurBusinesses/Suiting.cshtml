@model SSSLLP.Models.Company_Details_Tbl

@{
    ViewBag.Title = "SSS LLP - Suiting Fabric Business";
}

<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap">
                        <nav aria-label="breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="~/"><i class="fa fa-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="~/OurBusinesses">Our Businesses </a></li>
                                <li class="breadcrumb-item"><a class="@((ViewBag.ActivePage == "Suiting") ? "active" : "")" href="~/OurBusinesses/Suiting">Suiting </a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- page main wrapper start -->
    <div class="shop-main-wrapper section-padding">
        <div class="container">
            <div class="row">
                <!-- shop main wrapper start -->
                <div class="col-lg-12 order-1 order-lg-2">
                    <div class="shop-product-wrapper">
                        <!-- shop product top wrap start -->
                        <div class="shop-top-bar">
                            <div class="row align-items-center">
                                <div class="col-lg-7 col-md-6 order-2 order-md-1">
                                    <div class="top-bar-left">
                                        <div class="product-view-mode">
                                            <a class="active" href="#" data-target="grid-view" data-bs-toggle="tooltip" title="Grid View"><i class="fa fa-th"></i></a>
                                            <a href="#" data-target="list-view" data-bs-toggle="tooltip" title="List View"><i class="fa fa-list"></i></a>
                                        </div>
                                        <div class="product-amount">
                                            <p>Showing @ViewBag.pcount results</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-5 col-md-6 order-1 order-md-2 d-none d-lg-block">
                                    <div class="top-bar-right">
                                        <div class="product-short">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- shop product top wrap start -->
                        <!-- product item list wrapper start -->
                        <div class="shop-product-wrap grid-view row mbn-30">
                            @foreach (var item in (List<SSSLLP.Models.Product_Tbl>)@ViewBag.AllProducts)
                            {
                                { Html.RenderPartial("_Product", item); }
                            }
                        </div>
                        <!-- product item list wrapper end -->

                    </div>
                </div>
                <!-- shop main wrapper end -->
            </div>
        </div>
    </div>
    <!-- page main wrapper end -->

</main>


