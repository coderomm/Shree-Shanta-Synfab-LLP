    <script type="text/javascript">
        $(document).ready(function () {
            $("#success-alert").fadeOut(2000, 500)
        });
    </script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#homeModel').modal('');
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#CallEnquiry').submit(function (event) {
                //event.preventDefault(); // Prevents the form from submitting and refreshing the page

                // Show the existing message
                $('#CallEnquiryMessage').fadeIn();

                // Fade out the message after 3/4 second (750 milliseconds)
                setTimeout(function () {
                    $('#CallEnquiryMessage').fadeOut();
                }, 3000);
            });
        });
    </script>

</body>
